<%= form_with model: animal, local: true do  |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
 
  <div>
    <%= form.label :species %>
    <%= form.collection_select(:species_id, Species.all, :id, :species_type) %>
  </div>

  <div>
    <%= form.label :habitat %>
    <%= form.text_field :habitat %>
  </div>
 
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
 <% end %>
