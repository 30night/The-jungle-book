<%= render "nav-bar" %>

<h1>Animal Listing</h1>
<div class="containermenu">
<% @animal.each do |animal| %>
  <%= link_to animal_path(animal) do  %>
<div class="card" style="width: 18rem;">
  <%= image_tag animal.image if animal.image.attached? %>
  <div class="card-body">
     <h3><%= animal.name %></h3>
  </div>
</div>
  <% end %>
<% end %>
</div>

<div class="bottom-nav">

  <div class="bottom-links" >
  <%= button_to " Back " , root_path, method: :get %>
  </div>
</div>
